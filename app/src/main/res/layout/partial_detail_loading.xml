<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_1">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_250"
                        android:background="@color/gray_800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@drawable/shape_area_overview"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_16">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_100"
                        android:layout_marginRight="@dimen/dp_100"
                        android:background="@color/gray_800" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_120"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_120"
                        android:background="@color/gray_800" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_14"
                        android:paddingEnd="@dimen/dp_14">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginEnd="@dimen/dp_160"
                            android:layout_marginRight="@dimen/dp_160"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@color/gray_800" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/gray_800" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/gray_800" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/gray_800" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/gray_800" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_26"
                            android:baselineAligned="false"
                            android:weightSum="8">

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_6"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_weight="3">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@color/gray_800" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_6"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_weight="2">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_40"
                                    android:background="@color/gray_800" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="3">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_40"
                                    android:background="@color/gray_800" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>