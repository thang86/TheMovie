<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <View
                    android:id="@+id/image_poster"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_140"
                    android:background="@color/gray_800" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linear_poster"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/linear_poster"
                android:layout_toRightOf="@+id/linear_poster"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginEnd="60dp"
                            android:layout_marginRight="60dp"
                            android:background="@color/gray_800" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_150"
                            android:layout_marginRight="@dimen/dp_150"
                            android:background="@color/gray_800" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_200"
                    android:layout_marginRight="@dimen/dp_200"
                    android:background="@color/gray_800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/gray_800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/gray_800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/gray_800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/gray_800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/gray_800" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/gray_800" />

    </LinearLayout>
</LinearLayout>